{
  "cli": {
    "version": ">= 16.17.3",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "channel": "dev",
      "node": "20.x"
    },
    "preview": {
      "distribution": "internal",
      "channel": "preview",
      "node": "20.x"
    },
    "production": {
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": true
      },
      "autoIncrement": true,
      "channel": "production",
      "node": "20.x"
    },
    "preInstall": "npm install",
    "install": "npm ci --include=dev"
  },
  "submit": {
    "production": {}
  }
}